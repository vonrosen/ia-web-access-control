<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="org.archive.accesscontrol.model.RegexReplacement" table="regexreplacement" polymorphism="implicit">
		
		<id name="id" type="java.lang.Long">
			<column name='regexreplacement_id'/>
			<generator class="sequence">
				<param name="sequence">regexreplacement_id_seq</param>
			</generator>
		</id>

		<set name="rules" table="rule_regexreplacement" inverse="true" lazy="false" fetch="join" cascade="delete">
            <key>
                <column name="regexreplacement_id" not-null="true" />
            </key>
            <many-to-many class="org.archive.accesscontrol.model.RegexRule">
                <column name="rule_id" not-null="true" />
            </many-to-many>
        </set>
 
		<property name="regex" column="regex" type="java.lang.String" />
		<property name="replacement" column="replacement" type="java.lang.String" />
    
 	</class>
</hibernate-mapping>